<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:columnCount="1" >

    <TextView
        android:id="@+id/combatMaxStat"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="1"
        android:text="Stats"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textViewCharacterClassLevel"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="2"
        android:text="Strength"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/extraStatMax"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="2"
        android:text="Dexterity"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView4"
        android:layout_column="0"
        android:layout_gravity="right|top"
        android:layout_row="2"
        android:text="Mind"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/editStrength"
        android:layout_width="80dp"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="3"
        android:ems="10"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editDexterity"
        android:layout_width="80dp"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="3"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/editMind"
        android:layout_width="80dp"
        android:layout_column="0"
        android:layout_gravity="right|top"
        android:layout_row="3"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView5"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="4"
        android:text="Class"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_column="0"
        android:layout_gravity="bottom"
        android:layout_row="11"
        android:text="Create Character"
        android:onClick="createCharacter"
        />

    <TextView
        android:id="@+id/textView6"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="0"
        android:text="Name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/editName"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="0"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView7"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="8"
        android:text="Race"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/classText"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="7"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/raceText"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="10"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="6" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="9" />

</GridLayout>
